<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--  property facilities action  -->
    <record id="property_facilities_action" model="ir.actions.act_window">
        <field name="name">Property Facilities</field>
        <field name="res_model">property.facilities</field>
        <field name="view_mode">list</field>
    </record>
    <!--list view of property facilities -->
    <record id="property_facilities_view_list" model="ir.ui.view">
        <field name="name">property.facilities.view.list</field>
        <field name="model">property.facilities</field>
        <field name="arch" type="xml">
            <list editable="top" default_order="create_date desc">
                <field name="facility_name"/>
                <field name="facility_color" widget="color_picker"/>
            </list>
        </field>
    </record>
</odoo>