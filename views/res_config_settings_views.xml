<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Define a view to extend POS configuration settings with delivery options -->
    <record id="view_pos_configuration_form" model="ir.ui.view">
        <field name="name">pos.config.view.form.inherit.pos.pricing</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_pricing_section']" position="inside">
                <setting id="pos_category_discount_limit">
                    <div class="text-muted">
                        Discount for orders based on category wise discount
                    </div>
                    <div class="content-group mt16">
                        <field name="selected_category_ids" string="Category" widget="many2many_tags"
                               style="width:55%"/>
                        <field name="category_wise_discount_amount" style="width:150px" class="ms-2"/>%
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>