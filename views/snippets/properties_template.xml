<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="properties_template_highlight" name="Properties">
        <section class="properties_section">
            <div class="container">
                <div class="alert alert-info">
                    <h4>Your Category Highlight Tab snippet will be displayed here...
                        Please save to view the snippet
                    </h4>
                </div>
            </div>
        </section>
    </template>
    <template id="properties_highlight_snippet" inherit_id="website.snippets"
              name="Properties Snippet">
        <xpath expr="//snippets[@id='snippet_groups']" position="inside">
            <t t-snippet="property.properties_template_highlight"/>
        </xpath>
    </template>
</odoo>