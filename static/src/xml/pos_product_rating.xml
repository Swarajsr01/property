    <t t-name="ProductCard" t-inherit="point_of_sale.ProductCard" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('product-information-tag')]" position="before">
            <div style="margin-top:2px;" class="d-flex position-absolute ms-1">
                <t t-foreach="Array(PriorityStar).fill(0)" t-as="star" t-index="i"
                   t-key="star_index">
                    <span class="text-warning">★</span>
                </t>
                <t t-foreach="Array(5 - PriorityStar).fill(0)" t-as="star" t-index="j" t-key="star_index">
                    <span class="text-muted">★</span>
                </t>
            </div>
        </xpath>
    </t>
    <t t-name="OrderReceipt" t-inherit="point_of_sale.Orderline" t-inherit-mode="extension" owl="1">
        <xpath expr="//li[hasclass('price-per-unit')]" position="after">
<!--            <span style="color: red;">1234567890</span>-->
           <t t-esc="line.unitPrice"/>
        </xpath>
    </t>
</templates>
