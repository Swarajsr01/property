<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="property">
    <t t-name="property.category_data">
        <section class="categories_section">
            <div class="container">
                <h3 class="text-center section_heading" style="margin-bottom:35px;">
                    <u>Properties</u>
                </h3>
                <div class="categories_wrapper gap-2" style="display:flex;margin-bottom:35px;">
                    <t t-foreach="result.properties" t-as="property" t-key="property.id">
                        <div class="block span3 col-3">
                            <div class="card-group">
                                <div class="card">
                                    <a t-attf-href="/property/{{property.id}}" style="text-decoration:none;">
                                        <img class="card-img-top" t-attf-src="data:image/png;base64,{{property.image}}"
                                             style="padding: 1px 1px; margin: 0px; height: 160px; width:100%;"/>
                                        <div class="text-body" style="padding-left:10px;">
                                            <h5 t-esc="property.name"/>
                                            <h5 t-esc="property.owner"/>
                                            <h5 t-esc="property.build_date"/>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </section>
    </t>
</templates>
